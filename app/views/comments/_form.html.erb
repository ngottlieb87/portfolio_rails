<%= render "layouts/errors", :object => @comment %>

<%= form_for [@project, @comment] do |f| %>
  <%= f.label "Comment" %><br>
  <%= f.text_area :body, :class => "form-control" %><br>
  <%= f.hidden_field(:user_id, :value => current_user.id) %>
  <%= f.submit %>
<% end %>

<p><%= link_to "Return to comments", project_path(@project.id) %></p>
