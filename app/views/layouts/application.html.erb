<!DOCTYPE html>
<html>
  <head>
    <title>Noah Gottlieb Portfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container'>
      <% if current_user %>
        <%= current_user.email %> | <%= link_to "Sign out", '/signout', id: "signout" %>
      <% else %>
        <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin', id: "signin" %>
      <% end %>

      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <br>
      <%= yield %>
    </div>
  </body>
</html>
