<%= render "layouts/errors", :object => @project %>

<%= form_for @project do |f| %>
  <div class="col-4">
    <div class="form-group">
      <%= f.label :title, :class => "form_title" %>
      <%= f.text_field :title, :class => "form-control" %>
      <%= f.label :project_link, :class => "form_title" %>
      <%= f.text_field :project_link, :class => "form-control", :id=>"project_link" %>
      <br>
      <%= f.file_field :photo, :class => "form-control" %>
      <%= f.hidden_field(:user_id, :value => current_user.id) %>
      <span class="input-group-btn">
        <%= f.submit :class => "btn btn-primary form-control" %>
      </span>
    </div>
  </div>
<% end %>
<p><%= link_to "Return to Projects", projects_path %></p>
